<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.talentica.bookshelf.SignUpActivity">

    <com.talentica.bookshelf.widgets.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/normal_grey_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sign_up_edit_text"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_signup_name"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Full Name"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/edit_text_color"
        android:background="@drawable/custom_edit_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:id="@+id/textView4"
        android:layout_below="@+id/et_signup_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/normal_grey_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sign_up_edit_text"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_signup_email"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:hint="@string/hint_enter_email"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/edit_text_color"
        android:background="@drawable/custom_edit_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView5"
        android:layout_below="@+id/et_signup_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/normal_grey_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sign_up_edit_text"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_signup_pwd"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_enter_password"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/edit_text_color"
        android:background="@drawable/custom_edit_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_regular"/>

    <com.talentica.bookshelf.widgets.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/btn_text_sign_up"
        android:id="@+id/btn_sign_up"
        android:layout_below="@+id/et_signup_pwd"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_16"
        font:typeface="@string/font_regular"/>


</RelativeLayout>
